<div class="grid-row">
  <div class="grid-col">
    {{ivy-codemirror 
      value=code 
      options=(hash 
      lineNumbers=true 
      mode=mode 
      matchBrackets=true
      theme=theme)
      valueUpdated=(action (mut code))
    }}
    {{ivy-codemirror 
      value=ast 
      options=(hash 
      mode=jsonMode 
      theme=theme 
      foldGutter=true 
      lineNumbers=true
      lineWrapping=true
      gutters=gutters
      )}}
  </div>
  <div class="grid-col">
    {{ivy-codemirror value=nodeApi options=(hash 
      lineNumbers=true 
      mode="javascript" 
      theme=theme 
      matchBrackets=true
      autoIndent=true )}}
    {{ivy-codemirror value=output options=(hash 
      lineNumbers=true 
      mode=mode 
      theme=theme )}}
  </div>
</div>
